<% if (title) { %> 
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %> 
<% if (errors) { %>
    <ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>
<div class="account-management">
    <h2>Welcome <%= user.account_firstname %></h2>

    <p><a href="/account/update/<%= user.account_id %>">Update Account Information</a></p>

    <% if (user.account_type === 'employee' || user.account_type === 'admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/manager">Go to Inventory Management</a></p>
    <% } %>
</div>