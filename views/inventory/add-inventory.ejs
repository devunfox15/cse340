    <% if (title) { %>
        <h1><%= title %></h1>
    <% } else { %>
    <script>
        res.redirect('/'); 
    </script>
    <% } %>
    <% messages() %>
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>
    <div id="add-inventory">
        <form action="/inv/add-inventory" method="POST" id="classForm">
            <label for="classificationList">Classification:</label>
            <%- classificationList %>
            
            
            <label for="inv_make">Make</label>
            <input type="text" name="inv_make" id="inv_make" value="<%= locals.inv_make %>" placeholder="min of 3 characters" required pattern="^[a-zA-Z]+$">

            <label for="inv_model">Model</label>
            <input type="text" name="inv_model" id="inv_model" value="<%= locals.inv_model %>" placeholder="min of 3 characters"  required  pattern="^[A-Za-z\d]+$">

            <label for="inv_year">Year</label>
            <input type="number" name="inv_year" id="inv_year" value="<%= locals.inv_year %>" required min="1700" max="2099" placeholder="4 digit Year" >

            <label for="inv_description">Description: </label>
            <textarea name="inv_description" id="inv_description" minlength="10"  maxlength="500" placeholder="Description must be at least 10 characters and under 500" required><%= inv_description %></textarea>

            <label for="inv_image">Image path</label>
            <input type="text" name="inv_image" id="inv_image" value="/images/vehicles/no-image.png"  readonly >

            <label for="inv_thumbnail">Thumbnail path</label>
            <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="/images/vehicles/no-image-tn.png"  readonly >
            
            <label for="inv_price">Price</label>
            <input type="number" name="inv_price" id="inv_price" value="<%= locals.inv_price %>" placeholder="decimal or integer" required step ="0.01" min="0">
            
            <label for="inv_miles">Miles</label>
            <input type="number" name="inv_miles" id="inv_miles" value="<%= locals.inv_miles %>" placeholder="digits only" required min="0" max="9999999">

            <label for="inv_color">Color</label>
            <input type="text" name="inv_color" id="inv_color" value="<%= locals.inv_color %>" required pattern="^[a-zA-Z]+$">
            

            <button type="submit">Add Classification</button>
        </form>
        
    </div>

